package Exercicios1711;

import java.util.Scanner;

public class Exercicio1 {
	public static void main (String[] args) {
		int numero1=0, numero2=0;
			Scanner read = new Scanner (System.in);
			System.out.println("Programa que retorna o maior número digitado pelo usuário!");
			System.out.println("Digite o primeiro número: ");
			numero1= read.nextInt();
			System.out.println("Digite o segundo número: ");
			numero2= read.nextInt();
			if(numero1==numero2) {
				System.out.println("Números iguais. Favor iniciar o programa novamente!");
			}
			if(numero1>numero2) {
				System.out.println("O número %i é o maior!"+ numero1);
			}
			else {
				System.out.println("O número %i é o maior!"+ numero2);
			}
	}
}
